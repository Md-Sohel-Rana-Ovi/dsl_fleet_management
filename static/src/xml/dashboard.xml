<template id="template" xml:space="preserve">
    <t t-name="table_name_dashboard">
        <div class="oh_dashboard bg-success">
            <div class="container-fluid o_pos_dashboard">

            </div>
        </div>
    </t>
    <t t-name="main_template_dashboard">
        <div class="oh_dashboard">
            <div class="container-fluid o_pos_dashboard">
                <div class="container pt-4">
                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-lg rounded bg-primary text-white vehicles">
                                <div class="d-flex align-items-center justify-content-between p-3">
                                    <div class="stat-icon">
                                        <i class="fa fa-car fa-5x"></i>
                                    </div>
                                    <div class="text-center">
                                        <h3>Total Vehicles</h3>
                                        <h2 class="text-white" id="total_vehicle" t-esc="total_vehicle"></h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-lg rounded bg-success text-white drivers">
                                <div class="d-flex align-items-center justify-content-between p-3">
                                    <div class="stat-icon">
                                        <i class="fa fa-user fa-5x"></i>
                                    </div>
                                    <div class="text-center">
                                        <h3>Total Drivers</h3>
                                        <h2 class="text-white" id="total_driver" t-esc="total_driver"></h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-lg rounded bg-info text-white refuels">
                                <div class="d-flex align-items-center justify-content-between p-3">
                                    <div class="stat-icon">
                                        <i class="fa fa-battery-quarter fa-5x"></i>
                                    </div>
                                    <div class="text-center">
                                        <h3>Total Fueling Requests</h3>
                                        <h2 class="text-white" id="total_refueling"></h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-lg rounded bg-info text-white services">
                                <div class="d-flex align-items-center justify-content-between p-3">
                                    <div class="stat-icon">
                                        <i class="fa fa-cogs fa-5x"></i>
                                    </div>
                                    <div class="text-center">
                                        <h3>Total Services</h3>
                                        <h2 class="text-white" id="total_services"></h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-lg rounded bg-primary text-white accidentals">
                                <div class="d-flex align-items-center justify-content-between p-3">
                                    <div class="stat-icon">
                                        <i class="fa fa-users fa-5x"></i>
                                    </div>
                                    <div class="text-center">
                                        <h3>Accidental Case</h3>
                                        <h2 class="text-white" id="accidental_case"></h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-lg rounded bg-warning text-white models">
                                <div class="d-flex align-items-center justify-content-between p-3">
                                    <div class="stat-icon">
                                        <i class="fa fa-cubes fa-5x"></i>
                                    </div>
                                    <div class="text-center">
                                        <h3>Total Models</h3>
                                        <h2 class="text-white" id="total_model"></h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6 d-flex justify-content-start align-items-start p-5">
                            <div class="team_ticket_div half_chart chart-container card-shadow">
                                <h2 style="margin-top:50px; color: green">Services Graph</h2>
                                <hr />
                                <div class="graph_canvas">
                                    <canvas class="team_ticket_count" width="500" height="350"></canvas>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6 d-flex justify-content-start align-items-start p-5">
                            <div class="team_ticket_div half_chart chart-container card-shadow">
                                <h2 style="margin-top:50px; color: green">Refuel Graph</h2>
                                <hr />
                                <div class="graph_canvas">
                                    <canvas class="vehicle_refueling_count" width="500" height="350"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>


