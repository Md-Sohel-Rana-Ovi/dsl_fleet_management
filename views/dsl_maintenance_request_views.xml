<odoo>
    <data>
        <!-- Search View -->
        <record id="dsl_maintenance_request_search_view_view" model="ir.ui.view">
            <field name="name">dsl.maintenance.request.search.view</field>
            <field name="model">dsl.maintenance.request</field>
            <field name="arch" type="xml">
                <search string="Maintenance Request">
                    <field name="user_id"/>
                    <field name="driver_id"/>
                    <field name="allocate_person"/>
                    <field name="date"/>
                </search>
            </field>
        </record>
        <!-- Tree View -->
        <record id="dsl_maintenance_request_tree_view" model="ir.ui.view">
            <field name="name">dsl.maintenance.request.tree.view</field>
            <field name="model">dsl.maintenance.request</field>
            <field name="arch" type="xml">
                <tree string="Maintenance Request">
                    <field name="code"/>
                    <field name="user_id"/>
                    <field name="driver_id"/>
                    <field name="allocate_person"/>
                    <field name="date"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>
        <!-- Form View -->
        <record id="dsl_maintenance_request_form_view" model="ir.ui.view">
            <field name="name">dsl.maintenance.request.view</field>
            <field name="model">dsl.maintenance.request</field>
            <field name="priority" eval="7"/>
            <field name="arch" type="xml">
                <form string="Maintenance Request">
                    <header>
                        <!-- <button class="oe_highlight ml-4" name="payment_maintenance_request_view" string="Payment" type="object" attrs="{'invisible': [('state', '!=', 'approve')]}"/> -->
                        <button name="action_submit" string="Submit" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_approve" string="Approve" type="object" attrs="{'invisible': ['|', ('state', '!=', 'submit'), ('is_approved', '!=', True)]}"/>
                        <button id="button_done" string="Payment" name="action_payment" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'approve')]}"/> 
                        <button id="button_confirm" string="Confirm" name="action_confirm" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'payment')]}"/>
                        <button name="action_reset_draft" string="Re-draft" type="object" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        <button id="button_cancel" string="Cancel" name="action_cancel" states="confirm,approve" type="object" class="btn-danger"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submit,approve,payment,confirm,cancel"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_button_box" name="button_box">
                            <button type="object" name="toggle_active" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{'terminology': 'archive'}" invisible="1"/>
                                <span name="active" class="o_stat_text text-success" attrs="{'invisible': [('active', '=', False)]}">Active</span>
                                <span name="active" class="o_stat_text text-danger" attrs="{'invisible': [('active', '=', True)]}">Deactive</span>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <label for="code" class="oe_edit_only" string="Code"/>
                                <field name="code"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="is_approved" invisible="1"/>
                                <field name="user_id"/>
                                <field name="driver_id"/>
                                <field name="allocate_person"/> 
                                <field name="maintenance_type_id"/>
                                <field name="product_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="responsible_person"/>
                                <field name="fuel_type"/>
                                <field name="move_id"/>
                                <field name="amount"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- Action -->
        <record id="action_maintenance_request_view" model="ir.actions.act_window">
            <field name="name">Maintenance Requests</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dsl.maintenance.request</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="dsl_maintenance_request_tree_view"/>
        </record>
    </data>
</odoo>